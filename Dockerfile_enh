FROM ubuntu:22.04

WORKDIR /app

# 安裝必要的工具並添加 PPA
RUN apt update && apt-get install --no-install-recommends -y software-properties-common gnupg2 pipewire libspa-0.2-modules \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

RUN pipewire --version
RUN systemctl --user status pipewire || true

# 如果有應用程式啟動命令，可以添加到這裡
CMD ["bash"]